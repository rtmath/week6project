<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Address Book</title>
  </head>
  <body>
    @if (Model.Count == 0) {
      <span>You haven't created any contacts yet!</span>
    } else {
    <span>Here are the contacts you have created: </span>

    }
    @foreach (var contact in Model)
    {
      <li><a href='/contacts/@contact.GetContactID()'>@contact.GetContactName()</a></li>
    }
    <form action="/create" method="get"> <!-- <METHOD -->
      <button type="submit">Create New Contact</button>
    </form>
    <form action="/search" method="get"> <!-- <METHOD -->
      <button type="submit">Search for Contact</button>
    </form>
    <form action="/deleteAll" method="post"> <!-- <METHOD -->
      <button type="submit" name="deleteAll">Delete All Contacts</button>
    </form>
  </body>
</html>
